#!/usr/bin/env bash -e
#
# mpv
# https://github.com/mpv-player/mpv.git
#
cd "$(dirname "$0")"
set -a; source build.env; set +a

pkgname="mpv"
pkgdir="${STOWDIR}/${pkgname}"
srcdir="src/mpv"
builddir="${TMPDIR:-/tmp}/build.${pkgname}"

if [ "$1" == "--bundle" ]; then
  bundle=1
  shift
fi

rm -rf "${builddir}"

meson setup "${builddir}" "${srcdir}" \
  --prefix="${pkgdir}" \
  -Dwrap_mode=nodownload \
  -Dbuildtype=release \
  -Db_lto=true \
  -Db_lto_mode=thin \
  -Dlua=luajit \
  -Ddvdnav=enabled \
  -Dgl=disabled \
  -Dmacos-touchbar=disabled \
  "$@"

meson compile -C "${builddir}"

if [ -n "${bundle}" ]; then
  mkdir -p ~/.config/vulkan
  ln -sfn "${PREFIX}"/etc/vulkan/icd.d ~/.config/vulkan/icd.d

  meson compile -C "${builddir}" macos-bundle
  tar -czvf mpv.tar.gz -C "${builddir}" mpv.app
fi

rm -rf "${pkgdir}"

meson install -C "${builddir}" --tags runtime,devel
stow -Rd "${STOWDIR}" "${pkgname}"

rm -rf "${builddir}"
