root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[{*.md,fetch}]
max_line_length = unset

[{homebrew,patches,src}/**]
charset = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
max_line_length = unset
trim_trailing_whitespace = unset
